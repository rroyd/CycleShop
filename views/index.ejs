<%- layout("./layouts/boilerplate") %>

<section class="container text-center my-5">
  <h1>Welcome to <span class="green bold">CycleShop</span></h1>
  <h5>The place to buy and sell your products</h5>
  <p>Bring your items to life</p>
  <% if (!userLogged) { %>
  <div class="d-flex justify-content-center align-items-center gap-3">
    <a href="/register" class="btn btn-success ">Register</a>
    <p class="p-0 m-0">Already got an account? <a class="green" href="/login">Login to an existing account</a></p>
  </div>
  <% } else { %>
  <form action="/listings/search" method="get" class="container col-4">
    <div class="input-group">
      <label for="" class="input-group-text">Search</label>
      <input type="text" class="form-control" name="q" aria-describedby="helpId" placeholder="" />
      <button class="btn btn-success">Search</button>
    </div>
  </form>
  <% } %>
</section>

<section class="products container">
  <h1>Categories</h1>
  <hr class="green">
  <div class="d-flex justify-content-center my-5">
    <div class=" grid row-gap-3">
      <div class="row mb-3">
        <img class="col-3 img-card-top object-fit-cover" src="https://images.unsplash.com/photo-1544327415-cfb77383dabc?q=80&w=3508&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="">
        <img class="col-9 img-card-top object-fit-cover" src="https://plus.unsplash.com/premium_photo-1681160405609-389cd83998d0?q=80&w=3540&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="">
      </div>
      <div class="row">
        <img class="col-8 img-card-top object-fit-cover" src="https://images.unsplash.com/photo-1674110958136-40fd83adc9e3?q=80&w=3474&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="">
        <img class="col-4 img-card-top object-fit-cover" src=" https://plus.unsplash.com/premium_photo-1671551979606-0a3010e2ae40?q=80&w=3540&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="">
      </div>
    </div>
  </div>
</section>